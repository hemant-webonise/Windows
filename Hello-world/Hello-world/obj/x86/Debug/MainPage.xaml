<Page
    x:Class="Hello_world.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hello_world"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical">
            <Button Content="One" HorizontalAlignment="Stretch"></Button>
            <TextBlock Text="Two" HorizontalAlignment="Stretch"/>
            <Button Content="Three" HorizontalAlignment="Stretch"></Button>
        </StackPanel>
        <StackPanel Grid.Column="1" Background="Yellow" HorizontalAlignment="Stretch">
            <TextBlock TextWrapping="WrapWholeWords"  Text="Hello-World" FontSize="50" TextAlignment="Center" HorizontalAlignment="Stretch"/>
            <StackPanel>
                <Grid Background="Beige">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                <TextBlock Text="Four"  HorizontalAlignment="Left"/>
                <TextBlock Grid.Column="1" Text="Four-More"  HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
            <RelativePanel Background="BlanchedAlmond">
                <TextBlock x:ConnectionId='1' Text="Four|"  HorizontalAlignment="Left" x:Name="Four"/>
               
                <TextBlock x:ConnectionId='2'  Text="|Four-More|"  HorizontalAlignment="Right" RelativePanel.RightOf="Four" x:Name="FourMore"/>
              
                <TextBlock Text="|Four-Alling-To-Panel-Right"   RelativePanel.AlignRightWithPanel="True" />
            </RelativePanel>

            <Button Content="Five" HorizontalAlignment="Stretch"></Button>
        </StackPanel>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Like"></AppBarButton>
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Keyboard" Label="On SecondaryCommands Icons don't Work "></AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>

    </Page.BottomAppBar>

</Page>

